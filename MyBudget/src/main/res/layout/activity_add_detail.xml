    <com.dreamer.mybudget.ui.custom.DetailLayout
        android:id="@+id/addDetail_detailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_10dp"
        android:focusableInTouchMode="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_margin_20dp">

        <GridView
            android:id="@+id/addDetail_optionGridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:gravity="center"
            android:layout_margin="@dimen/activity_margin_20dp"
            android:background="@drawable/background_add_detail_option_grid"/>

        <Button
            android:id="@+id/addDetail_submitButton"
            android:layout_width="@dimen/btn_250dp"
            android:layout_height="wrap_content"
            android:text="@string/add_detail_submit"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_white_button"/>

        </RelativeLayout>
</LinearLayout>
