<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_card_2"
    android:orientation="vertical"
    android:padding="20dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/adapterItemDetailList_firstRawLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapterItemDetailList_priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="+ 30000"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adapterItemDetailList_noteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Salary finally!!"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/adapterItemDetailList_secondRawLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapterItemDetailList_categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Salary"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adapterItemDetailList_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_20dp"
            android:gravity="right"
            android:text="2015/11/18"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>