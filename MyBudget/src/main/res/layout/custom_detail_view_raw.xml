<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/detailRawView_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<TextView
    android:id="@+id/detailRawView_titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/detail_view_title_padding"
    android:text="@string/detail_view_date" />

<com.dreamer.mybudget.ui.custom.TypeEditText
    android:id="@+id/detailRawView_valueEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:maxEms="10"
    android:padding="@dimen/detail_view_title_padding"
    android:textCursorDrawable="@null" />
</LinearLayout>